<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_init_scan"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="th.ac.bu.science.mit.allappstatscollector.InitScan"
    >

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@android:color/white"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/circle"
            android:src="@drawable/circle_green"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/icon" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/circle3"
            android:src="@drawable/circle_green"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/circle"
            android:layout_alignStart="@+id/circle"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/init"
            android:id="@+id/textView2"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:textSize="@dimen/abc_dropdownitem_icon_width"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:layout_above="@+id/textView7"
            android:max="100"
            android:progress="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textProgress"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/init_analyze"
            android:id="@+id/textView7"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="54dp"
            android:textSize="22sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>